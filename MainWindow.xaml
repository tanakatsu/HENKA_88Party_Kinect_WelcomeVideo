    <Grid Name="layoutGrid" Margin="0">
        <Viewbox Stretch="Uniform" HorizontalAlignment="Center">
            <Grid>
                <Viewbox x:Name="VideoViewer" Width="360" Height="240" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid>
                        <Rectangle x:Name="videoArea" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                   Width="{Binding ElementName=VideoViewer, Path=Width}"
                                   Height="{Binding ElementName=VideoViewer, Path=Height}" 
                                   Visibility="Collapsed">
                            <Rectangle.Fill>
                                <DrawingBrush>
                                    <DrawingBrush.Drawing>
                                        <VideoDrawing x:Name="videoDrawing" />
                                    </DrawingBrush.Drawing>
                                </DrawingBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                            
                        <Image Name="image" Source="88B.png" 
